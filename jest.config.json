{
  "verbose": true,
  "preset": "ts-jest",
  "globals": {
    "ts-jest": {
      "tsConfig": "tsconfig.test.json"
    }
  },
  "moduleDirectories": [
    "node_modules",
    "src"
  ],
  "moduleNameMapper": {
    "^@/(.*)": "<rootDir>/src/$1"
  },
  "testEnvironment": "node",
  "testMatch": [
    "<rootDir>/test/**/*.test.ts"
  ],
  "collectCoverage": true,
  "coverageDirectory": "./coverage/"
}
